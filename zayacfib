public class zayacfib {
	public static void main(String []args){
		int n = 5, k = 3;
        int a = 1, b = 1;
        int fib = 2, i = 2;
                	
        while (i < n) {
        	fib = ( a * k) + b;
        	a = b;
            b = fib;               
            i++;
	        }
        System.out.print(fib);
	    }
}
